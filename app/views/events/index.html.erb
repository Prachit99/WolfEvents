<p style="color: green"><%= notice %></p>

<h1>Events</h1>

<div id="events">
  <% @events.each do |event| %>
    <%= render event %>
    <p>
      <%= link_to "Show this event", event %>
    </p>
  <% end %>
</div>
<% if current_admin %>
    <%= link_to "New event", new_event_path %>
<% elsif !current_admin %>
  <p>You are not authorized to creat a new event.</p>
<% end %>>
